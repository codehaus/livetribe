<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.livetribe.arm</groupId>
        <artifactId>livetribe-temproot</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.livetribe.arm</groupId>
    <artifactId>livetribe-arm-xbean</artifactId>
    <name>LiveTribe :: ARM :: XBean</name>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.xbean</groupId>
                <artifactId>maven-xbean-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>mapping</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <namespace>http://livetribe.org/schemas/server/1_0</namespace>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.opengroup</groupId>
            <artifactId>ARM_4_0</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.xbean</groupId>
            <artifactId>xbean-classloader</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.xbean</groupId>
            <artifactId>xbean-kernel</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.xbean</groupId>
            <artifactId>xbean-spring</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.xbean</groupId>
            <artifactId>xbean-server</artifactId>
        </dependency>

        <dependency>
            <groupId>org.livetribe</groupId>
            <artifactId>livetribe-util</artifactId>
        </dependency>

        <dependency>
            <groupId>org.livetribe.arm</groupId>
            <artifactId>livetribe-arm</artifactId>
        </dependency>

        <dependency>
            <groupId>org.livetribe.arm</groupId>
            <artifactId>livetribe-arm-knit</artifactId>
        </dependency>

        <dependency>
            <groupId>org.livetribe.mock</groupId>
            <artifactId>livetribe-mock-interface</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.livetribe.mock</groupId>
            <artifactId>livetribe-mock-one</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>
