<?xml version="1.0" encoding="UTF-8"?>
<beans>

    <bean id="loggingManager" class="org.livetribe.util.logging.LoggingManager" singleton="true" init-method="start" destroy-method="stop">
        <property name="configurationResource" value="logging.properties" />
    </bean>

    <bean id="terminator" class="org.livetribe.forma.boot.ShutDown" singleton="true" />
    <bean id="starter" class="org.livetribe.forma.boot.StartUp" singleton="true" init-method="start" destroy-method="stop" />

    <bean id="pluginRegistry" class="org.livetribe.forma.boot.PluginRegistry" singleton="true" />

    <bean id="classLoader" class="org.livetribe.forma.boot.PluginClassLoader" singleton="true">
        <property name="pluginRegistry"><ref local="pluginRegistry" /></property>
    </bean>

    <bean id="pluginsLoader" class="org.livetribe.forma.boot.PluginsLoader" singleton="true"
          init-method="start" destroy-method="stop">
        <property name="pluginsDirectory" value="plugins" />
        <property name="pluginClassLoader"><ref local="classLoader" /></property>
        <property name="pluginRegistry"><ref local="pluginRegistry" /></property>
    </bean>

</beans>
