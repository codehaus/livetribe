<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean id="frameService" class="org.livetribe.forma.frame.FrameService" singleton="true">
        <property name="terminator"><ref local="terminator" /></property>
        <property name="IOCService"><ref local="iocService" /></property>
        <property name="translator"><ref local="i18n" /></property>
    </bean>

    <bean id="menuBarService" class="org.livetribe.forma.frame.MenuBarService" singleton="true">
        <property name="frameService"><ref local="frameService" /></property>
    </bean>

    <bean id="statusBarService" class="org.livetribe.forma.frame.StatusBarService" singleton="true">
        <property name="frameService"><ref local="frameService" /></property>
        <property name="threadingService"><ref local="threadingService" /></property>
    </bean>

    <bean id="framePlugin" class="org.livetribe.forma.frame.FramePlugin" singleton="true" init-method="start" destroy-method="stop">
        <property name="frameService"><ref local="frameService" /></property>
        <property name="threadingService"><ref local="threadingService" /></property>
    </bean>
</beans>
